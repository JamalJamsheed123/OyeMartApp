<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="9dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/roundcornerview"
    android:paddingTop="8dp"
    >

    <TextView
        android:id="@+id/oliHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Mezan Oil"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/oilLoaction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_image"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/oilLoaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/poppins"
        android:lineHeight="15dp"
        android:text="@string/location"
        android:textColor="#FFFFFF"
        android:textFontWeight="275"
        android:textSize="10dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/title_image"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/locimage"
        android:layout_width="7.86dp"
        android:layout_height="10dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="3.14dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/location"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toStartOf="@+id/oilLoaction"
        app:layout_constraintStart_toEndOf="@+id/title_image"
        app:layout_constraintTop_toBottomOf="@+id/oliHeading" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/rating"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/star"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:layout_marginBottom="-1dp"
        android:layout_marginStart="-155dp"
        android:fontFamily="@font/poppins"
        android:text="@string/rating"
        android:textColor="#CDF34A"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rating" />
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/deliveryimage"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:src="@drawable/delivery1"
        android:layout_marginStart="242dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="18.55dp"
        app:layout_constraintStart_toEndOf="@+id/title_image"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="30dp"
        android:layout_height="21dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="18.55dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/poppins"
        android:text="@string/delivery_free"
        android:textColor="#CDF34A"
        android:textFontWeight="400"
        android:textSize="14dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deliveryimage"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view2"
        android:layout_width="324dp"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/bordershadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_image" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/title_image"
        android:layout_width="55dp"
        android:layout_height="51dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/oil1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>

